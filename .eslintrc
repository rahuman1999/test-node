{
	"root": true,
	"env": {
		"node": true,
		"es6": true
	},
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"@typescript-eslint"
	],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"rules": {
		"no-console": 0,
		"no-useless-catch": 0,
		"semi": [
			2,
			"always"
		],
		"indent": [
			"error",
			"tab"
		]
	}
}